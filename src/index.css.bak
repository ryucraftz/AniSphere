@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap');

:root {
  --bg-color: #0b0c15;
  --bg-gradient: radial-gradient(circle at 50% 0%, #1e1f2e 0%, #0b0c15 100%);
  --primary-color: #25f4ee;
  --primary-rgb: 37, 244, 238;
  --secondary-color: #fe2c55;
  /* More vibrant pink/red */
  --accent-color: #7000ff;
  /* Deep purple for depth */
  --text-color: #ffffff;
  --text-muted: #9ca3af;
  --footer-bg: #050508;

  /* Glassmorphism */
  --glass-bg: rgba(19, 20, 28, 0.6);
  --glass-border: rgba(255, 255, 255, 0.08);
  --glass-shine: rgba(255, 255, 255, 0.05);

  --font-main: 'Outfit', sans-serif;

  /* Breakpoints */
  --bp-sm: 640px;
  --bp-md: 768px;
  --bp-lg: 1024px;
  --bp-xl: 1280px;
}

[data-theme='light'] {
  --bg-color: #f8f9fa;
  --bg-gradient: radial-gradient(circle at 50% 0%, #ffffff 0%, #f0f2f5 100%);
  --primary-color: #00b4d8;
  --primary-rgb: 0, 180, 216;
  --secondary-color: #ff006e;
  --accent-color: #4361ee;
  --text-color: #111827;
  --text-muted: #4b5563;
  --footer-bg: #e5e7eb;
  --glass-bg: rgba(255, 255, 255, 0.75);
  --glass-border: rgba(0, 0, 0, 0.05);
  --glass-shine: rgba(255, 255, 255, 0.4);
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background-color: var(--bg-color);
  background-image: var(--bg-gradient);
  background-attachment: fixed;
  color: var(--text-color);
  font-family: var(--font-main);
  overflow-x: hidden;
  -webkit-font-smoothing: antialiased;
  font-size: 16px;
  min-height: 100vh;
}

a {
  text-decoration: none;
  color: inherit;
  transition: color 0.2s ease;
}

ul {
  list-style: none;
}

/* Utility Classes */
.container {
  width: 100%;
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 1.5rem;
}

@media (min-width: 768px) {
  .container {
    padding: 0 2rem;
  }
}

.glass {
  background: var(--glass-bg);
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
  border: 1px solid var(--glass-border);
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
}

.glass-card {
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0.01) 100%);
  backdrop-filter: blur(10px);
  border: 1px solid var(--glass-border);
  border-radius: 16px;
  transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
}

.glass-card:hover {
  border-color: rgba(37, 244, 238, 0.3);
  box-shadow: 0 10px 40px -10px rgba(37, 244, 238, 0.15);
  transform: translateY(-5px);
}

/* Image Protection */
.prevent-download {
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  pointer-events: none;
}

/* Buttons */
.btn-primary {
  background: var(--primary-color);
  color: #000;
  padding: 0.8rem 2rem;
  border-radius: 99px;
  font-weight: 700;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  z-index: 1;
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  transform: translateX(-100%);
  transition: 0.5s;
  z-index: -1;
}

.btn-primary:hover::before {
  transform: translateX(100%);
}

.btn-primary:hover {
  box-shadow: 0 0 20px rgba(37, 244, 238, 0.6);
  transform: scale(1.05);
}

/* Scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: var(--bg-color);
}

::-webkit-scrollbar-thumb {
  background: #333;
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--primary-color);
}

/* WallpaperCard Styles */
.wallpaper-card {
  overflow: hidden;
  position: relative;
  cursor: pointer;
  margin-bottom: 20px;
}

.wallpaper-card-container {
  position: relative;
  padding-bottom: 150%;
  /* Aspect ratio */
}

.wallpaper-card-skeleton {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, #1e1f2e 25%, #2a2b3d 50%, #1e1f2e 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  z-index: 1;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }

  100% {
    background-position: -200% 0;
  }
}

.wallpaper-card-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s, opacity 0.3s;
}

.wallpaper-card-image.loading {
  opacity: 0;
}

.wallpaper-card-image.loaded {
  opacity: 1;
}

.favorite-btn,
.download-btn-card {
  position: absolute;
  right: 10px;
  background: rgba(0, 0, 0, 0.5);
  border: none;
  border-radius: 50%;
  width: 35px;
  height: 35px;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  z-index: 3;
  transition: all 0.3s ease;
  opacity: 1;
  transform: scale(1);
}

.favorite-btn {
  top: 10px;
}

.download-btn-card {
  top: 55px;
}

.favorite-btn:hover,
.download-btn-card:hover {
  background: rgba(255, 255, 255, 0.2) !important;
  transform: scale(1.1);
}

.wallpaper-card-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 1rem;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0.6) 50%, transparent 100%);
  opacity: 0;
  transition: all 0.3s ease-in-out;
  backdrop-filter: blur(2px);
  z-index: 2;
}

.wallpaper-card-overlay h3 {
  font-size: 1.1rem;
  margin-bottom: 0.2rem;
}

.wallpaper-card-overlay p {
  font-size: 0.9rem;
  color: #ccc;
}

.wallpaper-card:hover .wallpaper-card-overlay {
  opacity: 1;
}

.wallpaper-card:hover .wallpaper-card-image {
  transform: scale(1.1);
}

.wallpaper-card:hover {
  box-shadow: 0 8px 25px rgba(var(--primary-rgb), 0.3) !important;
  border-color: var(--primary-color) !important;
}
